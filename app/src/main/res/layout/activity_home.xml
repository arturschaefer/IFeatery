<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#d15b47"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/saldo"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:text="Saldo:  20,00"
            android:layout_marginLeft="2dp"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/saldo"
            android:typeface="serif" />
        </RelativeLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableTop="@drawable/cafemanha"
        android:text="Café da Manhã"
        android:textColor="#e7e7e7"
        android:textSize="17dp"
        android:textStyle="bold"
        android:onClick="cafemanha"
        android:typeface="serif" />
    
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:drawableTop="@drawable/almoco"
        android:text="Almoço"
        android:textColor="#e7e7e7"
        android:textSize="17dp"
        android:textStyle="bold"
            android:onClick="almoco"
        android:typeface="serif" />
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:drawableTop="@drawable/cafetarde"
        android:text="Café da Tarde"
        android:textColor="#e7e7e7"
        android:textSize="17dp"
        android:textStyle="bold"
            android:onClick="cafetarde"
        android:typeface="serif" />
                
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:drawableTop="@drawable/janta"
        android:text="  Janta"
        android:textColor="#e7e7e7"
        android:textSize="20dp"
        android:textStyle="bold"
            android:onClick="janta"
        android:typeface="serif" />

</RelativeLayout>